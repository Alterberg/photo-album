@model OnlinePhotoAlbum.Web.Models.UserViewModel

@{
    ViewBag.Title = "Delete";
}

    <h2>Delete User @Model.Username</h2>

<h3>Are you sure you want to delete this?</h3>

<div class="container">
    <div class="row">
        <div class="col-md-6">

            <p>
                @Html.LabelFor(model => model.Name)
                @Html.DisplayFor(model => model.Name)
            </p>
            <p>
                @Html.LabelFor(model => model.Username)
                @Html.DisplayFor(model => model.Username)
            </p>
            <p>
                @Html.LabelFor(model => model.Role)
                <br />
                @Html.DisplayFor(model => model.Role)
            </p>
            <p>
                @Html.LabelFor(model => model.RegDate)
                @Html.DisplayFor(model => model.RegDate)
            </p>
            <br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color col-md-pull-2">
                    <input type="submit" value="Delete" class="btn btn-danger" /> <span> | </span>
                    @*@Html.ActionLink("Cancel", "Index", null, htmlAttributes: new { @class = "btn btn-default" })*@
                    <a href="javascript:history.go(-1);" class="btn btn-default">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>



